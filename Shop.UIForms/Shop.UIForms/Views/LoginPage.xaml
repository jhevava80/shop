<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.UIForms.Views.LoginPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Login">
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding Login}">
            <StackLayout Padding="8">
                <Label Text="Email"></Label>
                <Entry Text="{Binding Email}" Placeholder="Enter email..." Keyboard="Email" >                    
                </Entry>
                <Label Text="Password"></Label>
                <Entry Text="{Binding Password}" Placeholder="Enter password..." IsPassword="True" >
                </Entry>
                <Button Text="Login in" Command="{Binding LoginCommand}">
                    
                </Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>